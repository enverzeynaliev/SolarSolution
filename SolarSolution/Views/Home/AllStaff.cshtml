@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Cотрудники";
}

<div class="text-center">
    <p class="display-6">Список всех сотрудников</p>
    <table class="table table-hover">
        <thead class="flex-column bg-light">
        <tr>
            <th>Фото</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Должность</th>
            <th>Дата рождения</th>
            <th></th>
        </tr>
        </thead>
        @foreach (var staff in Model)
        {
            <tbody>
            <tr style="text-align: center">
                <td>
                    <img class="rounded-2" height="30px" src="~/imgs/@(staff.Picture ?? "customfoto.jpg")">
                </td>
                @* <td > <img class="rounded-circle" height="50px" src="~/imgs/@staff.Picture"></td> *@
                <td> @($"{staff.Surname}")</td>
                <td>@($"{staff.FirstName}")</td>
                <td>@($"{staff.LastName}")</td>
                <td>@($"{staff.Position}")</td>
                <td>@($"{staff.Birthday:dd/MM/yyyy}")</td>
                <td>
                    <form method="get">
                        <input hidden="hidden" value="@staff.Id" name="id">
                        <input type="submit" class="btn-primary" value="Ред." formaction="@Url.Action("EditPerson")">
                        <input type="submit" class="btn-danger" value="X" formaction="@Url.Action("DeletePerson")">

                    </form>
                </td>
            </tr>
            </tbody>
        }

    </table>
</div>