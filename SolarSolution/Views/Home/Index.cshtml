@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Ближайшие дни рождения</h1>

    <table class="table table-hover">
    <thead>
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Должность</th>
        <th>Дата рождения</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var staff in Model)
    {
        <tr style="text-align:center">
            <td style="text-align:center"> @($"{staff.Surname}")</td>
            <td style="text-align:center">@($"{staff.FirstName}")</td>
            <td style="text-align:center">@($"{staff.Position}")</td>
            <td style="text-align:center">@($"{staff.Birthday:dd/MM/yyyy}")</td>
        </tr>
    }
        </tbody>
        </table>
    
</div>